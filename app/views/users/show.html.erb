<style type="text/css">
p {font-size:13px;}	

</style>

<div class="row" style="vertical-align:bottom;padding:10px">
	<div>
		<table class="span12">
			<tr>
				<td style="width:60%;vertical-align:bottom;text-align:right;padding-right:10px;">
					<span><%= @user.name %></span>
					<br>
					<span><%= gender @user.gender %></span><br>
					<span>Age: <%= @user.age %></span>
				</td>
				<td style="width:100%">
					<img class="pull-right" src="/assets/<%= @user.profile_pic %>" style="width:120px;float:right;">
				</td>
			</tr>
		</table>
	</div>

	<div class="paddingDiv"/>

	<div class="divider" style="margin-top:10px;margin-bottom:10px">
		<span>Seeking: </span>
		<% if @user.int_gender.downcase == 'f' %>
		<span>Female</span>
		<% else %>
		<span>Male</span>
		<% end %>
	</div>

	<div class="paddingDiv"/>

	<img src="/assets/runbikeswim.png" width="87px"/>
	<br>
	<span>
		<input type="checkbox" style="margin-right:17px;" checked="true"/>
		<input type="checkbox" style="margin-right:17px;" checked="true"/>
		<input type="checkbox" checked="true">
	</span>

	<br>

	<div class="paddingDiv"/>

	<span>Expertise</span>
	<img src="/assets/4stars.png"/>